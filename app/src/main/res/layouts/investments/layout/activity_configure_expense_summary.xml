<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".expenses.ConfigureExpenseSummaryActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expenseSmsFilterCriteriaLabel"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/expenseSmsFilterCriteriaField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Expense SMS filter keyword"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

        <ScrollView
            android:id="@+id/expenseSmsFilterCriteriaScrollView"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"
            >
            <GridLayout
                android:id="@+id/expenseSmsFilterCriteriaGridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                />
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Done"
            />





</LinearLayout>