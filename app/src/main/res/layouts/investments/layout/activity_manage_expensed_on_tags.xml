<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".expenses.ManageExpensedOnTagsActivity">
    <include layout="@layout/tool_bar_layout"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/expensedOnGroupTagNamesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expensedOnGroupTagNamesField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Group Tags"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    <ScrollView
        android:id="@+id/manageExpensedOnGroupTagsScrollView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <GridLayout
            android:id="@+id/manageExpensedOnGroupTags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1" />
    </ScrollView>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/expensedOnElementalTagNamesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expensedOnElementalTagNamesField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Elemental Tags"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    <ScrollView
        android:id="@+id/manageExpensedOnElementalTagsScrollView"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        >
        <GridLayout
            android:id="@+id/manageExpensedOnElementalTags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Done"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/expensedOnGroupTagsEditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add"
            android:onClick="expensedOnGroupTagsEdit"
            android:layout_margin="16dp" />
    </LinearLayout>


</LinearLayout>