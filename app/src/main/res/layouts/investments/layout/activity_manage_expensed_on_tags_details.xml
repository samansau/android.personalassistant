<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".expenses.ManageExpensedOnTagsDetailsActivity">
    <include layout="@layout/tool_bar_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensedOnGroupTagNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/expensedOnGroupTagNameField"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="Group Tag Name"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            />

    </LinearLayout>
    <!--
    <android.support.design.widget.TextInputLayout
        android:id="@+id/expensedOnGroupTagNamesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expensedOnGroupTagNamesField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Group Tags"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    -->
    <ScrollView
        android:id="@+id/manageExpensedOnGroupTagsEditScrollView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <GridLayout
            android:id="@+id/manageExpensedOnGroupTagsEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1" />
    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/expensedOnElementalTagNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/expensedOnElementalTagNameField"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="Elemental Tag Name"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            />

    </LinearLayout>
    <!--
    <android.support.design.widget.TextInputLayout
        android:id="@+id/expensedOnElementalTagNamesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expensedOnElementalTagNamesField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Elemental Tags"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
    -->
    <ScrollView
        android:id="@+id/manageExpensedOnElementalTagsEditScrollView"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        >
        <GridLayout
            android:id="@+id/manageExpensedOnElementalTagsEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done"
        />


</LinearLayout>