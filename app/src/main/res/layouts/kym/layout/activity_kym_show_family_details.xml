<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/tool_bar_layout"/>
        <TableLayout
            android:id="@+id/kymFamily"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/kymFatherNameFieldLabel"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/kymFatherNameField"
                        android:layout_width="319dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:hint="Father's Name" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/kymMotherNameFieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/kymMotherNameField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Mother's Name" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/wifeNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/wifeNameField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Wife's Name" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/kid1Label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/kid1Field"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Eldest kid" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/kid2Label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/kid2Field"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Second Elder kid" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/kid3Label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/kid3Field"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Third Elder kid" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <Button
                    android:text="Save"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_layout"
        />
</android.support.v4.widget.DrawerLayout>