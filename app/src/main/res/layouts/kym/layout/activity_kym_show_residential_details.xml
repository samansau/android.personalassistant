<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="android.dev.personalassistant.kym.KymShowResidentialDetailsActivity">
        <include layout="@layout/tool_bar_layout"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/residentialDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Filter : Residence Name"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <Spinner
                    android:id="@+id/residenceName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/residenceNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/residenceNameField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Residence Name" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/shareCertificateNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/shareCertificateNameField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Share Certificate Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/electricMeterNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/electricMeterNumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Electric Meter Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/electricMeterCANumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/electricMeterCANumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Electric Consumer Account Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/gasMeterNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/gasMeterNumberField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Gas Meter Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/gasMeterCANumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/gasMeterCANumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Gas Consumer Account Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/waterMeterNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/waterMeterNumberField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Water Meter Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/waterMeterCANumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/waterMeterCANumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Water Consumer Account Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneLine1NumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phoneLine1NumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Phone Line 1 Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneLine1CANumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phoneLine1CANumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Phone Line 1 Consumer Account Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneLine2NumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phoneLine2NumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Phone Line 2 Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneLine2CANumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phoneLine2CANumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Phone Line 2 Consumer Account Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

             <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <Button
                    android:text="Save"
                    />
            </TableRow>
        </TableLayout>
        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_layout"
        />
</android.support.v4.widget.DrawerLayout>