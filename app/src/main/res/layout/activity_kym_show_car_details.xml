<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="android.dev.personalassistant.kym.KymShowCarDetailsActivity">
        <include layout="@layout/tool_bar_layout"/>
        <TableLayout
            android:id="@+id/carDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Filter : Car Number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <Spinner
                    android:id="@+id/carNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/carNumberFieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/carNumberField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Car Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/carNameFieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/carNameField"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:hint="Car Name" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/drivingLicenseNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/drivingLicenseNumberField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:hint="Driving Lisence Number" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/drivingLicenseExpiryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/drivingLicenseExpiryField"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:maxLines="1"
                        android:inputType="date"
                        android:hint="Driving Lisence Expiry(dd-mm-yyyy)" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >
                <Button
                    android:text="Save"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_layout"
        />
</android.support.v4.widget.DrawerLayout>