<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.dev.personalassistant">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".expenses.components.ManageExpenseTagsActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity
            android:name=".documents.components.ManageDocumentTagsActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity
            android:name=".documents.components.ManageDocumentImagesActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity android:name=".expenses.components.AddEditExpensesActivity" />
        <activity android:name=".MyInformationActivity" />
        <activity android:name=".kym.components.KymShowBankListActivity" />
        <activity android:name=".kym.components.KymShowBankDetailsActivity" />
        <activity android:name=".documents.components.ShowDocumentsListActivity" />
        <activity android:name=".documents.components.ShowDocumentDetailsActivity" />
        <activity android:name=".expenses.components.TrackElectronicExpensesActivity" />
        <activity android:name=".kym.main.KnowYourMasterActivity"></activity>
    </application>

</manifest>